<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/heroye"
    tools:context="com.heroes.nouveau.hackmap.Principal"
    android:textAlignment="center">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barl"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige tu misiÃ³n:"
        android:id="@+id/tit"
        android:textSize="26dp"
        android:layout_below="@+id/barl"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/comidaP"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/foodyeah"
        android:onClick="aniBF"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ropaP"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="aniBC"
        android:background="@drawable/clotheyeah"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/saludP"
        android:background="@drawable/medica"
        android:layout_above="@+id/ropaP"
        android:onClick="aniBH"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sangreP"
        android:background="@drawable/blood"
        android:layout_below="@+id/comidaP"
        android:layout_alignLeft="@+id/saludP"
        android:layout_alignStart="@+id/saludP"
        android:onClick="aniBB"/>

</RelativeLayout>
